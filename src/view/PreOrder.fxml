<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="padre" alignment="CENTER" style="-fx-border-color: #ccc; -fx-border-radius: 5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PreOrderController">
    <children>
        <ImageView fx:id="portada" fitHeight="210.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true" />
        
        <GridPane alignment="TOP_CENTER" hgap="5.0" vgap="5.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            
            <Label fx:id="titulo" text="Título del Libro" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font><Font name="System Bold" size="14.0" /></font>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="15.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <Label fx:id="precio" text="0.00 €">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
            </HBox>
         <Spinner fx:id="spinnerCantidad" prefHeight="26.0" prefWidth="132.0" GridPane.rowIndex="3" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</VBox>
