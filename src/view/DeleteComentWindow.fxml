<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" prefHeight="550.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DeleteComentWindowController">
   <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="true" text="Archivo">
               <items>
                  <MenuItem accelerator="Ctrl+Q" onAction="#handleExit" text="Salir" />
               </items>
            </Menu>
            <Menu mnemonicParsing="true" text="Acciones">
               <items>
                  <MenuItem accelerator="Ctrl+P" onAction="#handleReportAction" text="Manual De Usuario" />
                  <MenuItem accelerator="Ctrl+I" onAction="#handleInformeTecnico" text="Informe Técnico de Stock" />
                  <SeparatorMenuItem />
                  <MenuItem onAction="#handleBack" text="Volver Atrás" />
               </items>
            </Menu>
            <Menu mnemonicParsing="true" text="Ayuda">
               <items>
                  <MenuItem onAction="#handleAboutAction" text="Acerca de Nosotros" />
               </items>
            </Menu>
         </menus>
      </MenuBar>

      <Label text="Administración de Comentarios">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>

      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Label text="Usuario:" />
            <ComboBox fx:id="comboUsers" prefWidth="200.0" promptText="Seleccionar usuario..." />
         </children>
      </HBox>

      <TableView fx:id="tableComments" prefHeight="350.0" prefWidth="760.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colBook" prefWidth="180.0" text="Libro (Título)" />
          <TableColumn fx:id="colDate" prefWidth="120.0" text="Fecha" />
          <TableColumn fx:id="colComment" prefWidth="440.0" text="Contenido del Comentario" />
        </columns>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </TableView>

      <HBox alignment="CENTER" spacing="40.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleDeleteComment" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar Comentario" />
            <Button mnemonicParsing="false" onAction="#handleBack" prefHeight="30.0" prefWidth="100.0" text="Volver" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>