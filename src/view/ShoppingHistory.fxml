<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShoppingHistoryController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #2c3e50; -fx-padding: 0 20 0 20;">
            <children>
                <Label text="Historial de Pedidos Finalizados" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <children>
                <Label text="Aquí puedes consultar todas tus compras confirmadas:" textFill="#555555">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            
                <TableView fx:id="tableOrders" onMouseClicked="#clickFila" prefHeight="330.0" prefWidth="660.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" minWidth="80.0" prefWidth="120.0" text="Nº de Pedido" />
                        <TableColumn fx:id="colFecha" minWidth="150.0" prefWidth="250.0" text="Fecha y Hora de Compra" />
                        <TableColumn fx:id="colTotal" minWidth="100.0" prefWidth="150.0" text="Total Pagado (€)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volver" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Volver" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
