<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<VBox fx:id="mainVBox" prefHeight="500.0" prefWidth="700.0" spacing="15.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShoppingHistoryController">
    <children>
        <MenuBar fx:id="menuBar">
          <menus>
            <Menu mnemonicParsing="false" text="Navegación">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#goToCart" text="Carrito" />
                <MenuItem mnemonicParsing="false" onAction="#volver" text="Menú Principal" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Sesión">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleLogOut" text="Cerrar Sesión" />
              </items>
            </Menu>
            <Menu fx:id="menuAcciones" mnemonicParsing="true" text="Acciones">
               <items>
                  <MenuItem fx:id="iManual" accelerator="Ctrl+P" onAction="#handleHelpAction" text="Manual De Usuario" />
                  <MenuItem fx:id="iJasper" accelerator="Ctrl+I" onAction="#handleInformeTecnico" text="Informe Técnico de Stock" />
               </items>
            </Menu>
          </menus>
        </MenuBar>
        <HBox fx:id="headerHBox" alignment="CENTER_LEFT" prefHeight="60.0">
            <children>
                <Label fx:id="headerLabel" text="Historial de Pedidos Finalizados">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="infoLabel" text="Aquí puedes consultar todas tus compras confirmadas:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            
                <TableView fx:id="tableOrders" onMouseClicked="#clickFila" prefHeight="330.0" prefWidth="660.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" minWidth="80.0" prefWidth="120.0" text="Nº de Pedido" />
                        <TableColumn fx:id="colFecha" minWidth="150.0" prefWidth="250.0" text="Fecha y Hora de Compra" />
                        <TableColumn fx:id="colTotal" minWidth="100.0" prefWidth="150.0" text="Total Pagado (€)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volver" prefHeight="35.0" prefWidth="120.0" text="Volver" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>