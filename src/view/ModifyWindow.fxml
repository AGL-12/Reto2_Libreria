<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="rootPane" prefHeight="450.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ModifyWindowController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <MenuBar GridPane.columnSpan="2">
        <menus>
          <Menu text="Archivo">
            <items>
              <MenuItem accelerator="Ctrl+Q" onAction="#handleExit" text="Salir" />
            </items>
          </Menu>
          <Menu text="Acciones">
            <items>
              <MenuItem accelerator="Ctrl+P" onAction="#handleReportAction" text="Manual de Usuario" />
              <MenuItem accelerator="Ctrl+I" onAction="#handleInformeTecnico" text="Informe Técnico" />
            </items>
          </Menu>
          <Menu text="Ayuda">
            <items>
              <MenuItem onAction="#handleAboutAction" text="Acerca de" />
            </items>
          </Menu>
        </menus>
      </MenuBar>

      <Label text="Modificar Datos" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
         <font><Font name="System Bold" size="20.0" /></font>
      </Label>

      <ComboBox fx:id="comboUsers" prefWidth="200.0" promptText="Seleccionar usuario..." GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

      <Label text="Usuario:" GridPane.rowIndex="3"><GridPane.margin><Insets left="20.0"/></GridPane.margin></Label>
      <Label fx:id="LabelUsername" text="---" GridPane.columnIndex="1" GridPane.rowIndex="3" />

      <Label text="Email:" GridPane.rowIndex="4"><GridPane.margin><Insets left="20.0"/></GridPane.margin></Label>
      <Label fx:id="LabelEmail" text="---" GridPane.columnIndex="1" GridPane.rowIndex="4" />

      <Label text="Nombre:" GridPane.rowIndex="5"><GridPane.margin><Insets left="20.0"/></GridPane.margin></Label>
      <TextField fx:id="TextField_Name" GridPane.columnIndex="1" GridPane.rowIndex="5"><GridPane.margin><Insets right="20.0"/></GridPane.margin></TextField>

      <Label text="Apellidos:" GridPane.rowIndex="6"><GridPane.margin><Insets left="20.0"/></GridPane.margin></Label>
      <TextField fx:id="TextField_Surname" GridPane.columnIndex="1" GridPane.rowIndex="6"><GridPane.margin><Insets right="20.0"/></GridPane.margin></TextField>

      <Label text="Teléfono:" GridPane.rowIndex="7"><GridPane.margin><Insets left="20.0"/></GridPane.margin></Label>
      <TextField fx:id="TextField_Telephone" GridPane.columnIndex="1" GridPane.rowIndex="7"><GridPane.margin><Insets right="20.0"/></GridPane.margin></TextField>

      <Label text="Nueva Password:" GridPane.rowIndex="8"><GridPane.margin><Insets left="20.0"/></GridPane.margin></Label>
      <PasswordField fx:id="TextField_NewPass" GridPane.columnIndex="1" GridPane.rowIndex="8"><GridPane.margin><Insets right="20.0"/></GridPane.margin></PasswordField>

      <Label text="Confirmar Password:" GridPane.rowIndex="9"><GridPane.margin><Insets left="20.0"/></GridPane.margin></Label>
      <PasswordField fx:id="TextField_ConfirmPass" GridPane.columnIndex="1" GridPane.rowIndex="9"><GridPane.margin><Insets right="20.0"/></GridPane.margin></PasswordField>

      <Button fx:id="Button_SaveChanges" onAction="#save" text="Guardar Cambios" GridPane.rowIndex="10" GridPane.halignment="RIGHT">
         <GridPane.margin><Insets right="10.0"/></GridPane.margin>
      </Button>
      <Button fx:id="Button_Cancel" onAction="#cancel" text="Cancelar" GridPane.columnIndex="1" GridPane.rowIndex="10">
         <GridPane.margin><Insets left="10.0"/></GridPane.margin>
      </Button>
   </children>
</GridPane>