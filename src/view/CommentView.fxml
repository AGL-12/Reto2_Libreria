<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="200.0" prefWidth="540.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CommentViewController">
    <children>
      <HBox fx:id="buttonBox" alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleEdit" text="Editar" />
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDelete" text="Borrar" />
         </children>
      </HBox>
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Label fx:id="lblUsuario" text="Usuario">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lblFecha" text="DD/MM/YYYY" textFill="#757575" />
                <fx:include fx:id="starRate" source="StarRate.fxml" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>

        <TextArea fx:id="txtComment" style="-fx-text-fill: black;" wrapText="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="7.0" />
         </VBox.margin></TextArea>
    </children>
</VBox>
